{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": "source/",
    "outDir": "distrib/",
    "newLine": "LF"
  },

  "include": [
    "source/**/*"
  ],

  "exclude": [
    "distrib/*",
    "node_modules/*",
    "test/*"
  ]
}